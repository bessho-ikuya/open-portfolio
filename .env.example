# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Available languages (comma-separated)
# Example: "en,ja,fr" for English, Japanese, and French
NEXT_PUBLIC_LOCALES="en,ja"

# Default language to use when no language is specified
# Must be one of the languages listed in NEXT_PUBLIC_LOCALES
NEXT_PUBLIC_DEFAULT_LOCALE="ja"

# Default theme to use when no theme is specified
# Must be one of the themes listed in NEXT_PUBLIC_THEMES
NEXT_PUBLIC_DEFAULT_THEME=light